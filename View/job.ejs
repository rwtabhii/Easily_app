          </div>
  
          <div class="container"> 
            <div class="skills p-1">
           <% j.skills.forEach(skill=>{ %>
              
              <button class="btn btn-sm btn-outline-info"><%= skill%></button>
          <%  }) %>

            </div>
            <button data-bs-toggle="modal" data-bs-target="#applyModal" class="btn btn-md btn-primary px-5 my-2">
              Apply Now
            </button>
          </div>
        </div>
        <!-- job posted -->
        <small class="text-body-secondary">
          <span style="width: 160px" class="bg-success text-white border border-success border border-success p-1 border-opacity-50 rounded">
            Posted: <%= j.jobposted%>
          </span></small>
        <!-- job posted -->
      </div>
    </div> 

 <!-- modal  -->
 <div class="modal fade" id="applyModal" tabindex="-1" aria-labelledby="exampleModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5 text-success" id="exampleModalLabel">
            easily
          </h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <!-- form start  -->
          <div class="container p-3 mx-auto w-75 form-box my-5 rounded-md">
            <h4 style="color: #181642" class="text-center mb-3">
              apply in less than 1 minute
            </h4>
            <form action="/apply/<%= j.id %>" method="post" enctype="multipart/form-data">
              <div class="mb-3">
                <div class="input-group">
                  <span class="input-group-text">Name</span>
                  <input required="" name="name" type="text" aria-label="First name" class="form-control" placeholder="enter your name">
                </div>
              </div>
  
              <div class="mb-3">
                <div class="input-group">
                  <span class="input-group-text">Email</span>
                  <input required="" name="email" type="email" aria-label="email" class="form-control" placeholder="enter your email">
                </div>
              </div>
  
              <div class="mb-3">
                <div class="input-group">
                  <span class="input-group-text">Contact</span>
                  <input required="" name="contact" type="tel" aria-label="First name" class="form-control" placeholder="+91 ____ __ ____">
                </div>
              </div>
  
              <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupFile01">Resume</label>
                <input name="image" type="file" class="form-control" id="inputGroupFile01" required="">
              </div>
  
              <button class="w-100 mb-3 mt-2 btn btn-md btn-success" type="submit" >
                Submit
              </button>
            </form>
          </div>
          <!-- form end  -->
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Close
          </button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
