<div class="container main">
    <div class="left p-2 ">
        <h1 class="main-heading">A comprehensive platform for reliable</h1>
        <h2 class="text-white ml12">

            <h5 class="text-white">Get Discovered. Get Hired.</h5>
            <h1 class="letter">job opportunities and internships</h1>
            <div class="actions">
                <a href="/jobs" class="btn btn-lg lbtn"> I'm A Job Seeker </a>
                <button data-bs-toggle="modal" data-bs-target="#register" class="btn btn-lg lbtn mx-2">
                    I'm A Recruiter
                </button>
            </div>
    </div>
    <div class="right">
        <img src="images/banner.png" alt="banner">
    </div>


</div>
<div class="modal fade" tabindex="-1" id="register">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Register Recrutier</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/register" method="post">
                    <!-- Name -->
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input required name="name" type="text" class="form-control" placeholder="Enter your full name">
                    </div>
                    <!-- Email -->
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input required name="email" type="email" class="form-control" placeholder="Enter your email">
                    </div>
                    <!-- Password -->
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input required name="password" type="password" class="form-control"
                            placeholder="Enter your password">
                    </div>

                    <!-- Submit Button -->
                <button class="w-100 btn btn-primary mt-3" type="submit" data-ds-target="login">Register</button>
            </form>
            </div>
            <div class="modal-footer d-flex align-items-centre justify-content-between">
                <div class="left d-flex flex-row align-items-centre justify-content-centre">
                  <!-- Button trigger login modal -->
                  <span>Already registered?</span>
                  <button type="button" class="btn btn-sm px-3 btn-outline-success" data-bs-toggle="modal" data-bs-target="#login">
                    login
                  </button>
                </div>
                <div class="right">
                  <a href="#"><i class="text-primary bi bi-twitter"></i></a>
                  <a href="#"><i class="text-danger bi bi-instagram"></i></a>
                  <a href="#"><i class="text-info bi bi-facebook"></i></a>
                  <a href="#"><i class="text-success bi bi-whatsapp"></i></a>
                  <a href="#"><i class="text-primary bi bi-linkedin"></i></a>
                </div>
              </div>
            
        </div>
    </div>
</div>
<div class="modal fade " tabindex="-1"  id="login">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">logIn</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/login" method="post">

                    <!-- Email -->
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input required name="email" type="email" class="form-control" placeholder="Enter your email">
                    </div>
                    <!-- Password -->
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input required name="password" type="password" class="form-control"
                            placeholder="Enter your password">
                    </div>



            </div>
            <div class="modal-footer">
                <!-- Submit Button -->
                <button class="w-100 btn btn-primary mt-3" type="submit">logIn</button>
            </div>
            </form>
        </div>
    </div>
</div>